alias backend='(cd backend && go mod tidy && golangci-lint run && goimports -w . && go vet ./... && go test -tags=unit -count=1 ./... && go build ./...)'
alias frontend='(cd frontend && pnpm format && pnpm lint && pnpm build)'
alias up='docker compose -f docker-compose.dev.yml up --build -d'
alias down='docker compose -f docker-compose.dev.yml down'
alias restart='down && up'
alias reset='docker compose -f docker-compose.dev.yml down -v'
alias prune='docker system prune -f'
alias logs='docker compose -f docker-compose.dev.yml logs'